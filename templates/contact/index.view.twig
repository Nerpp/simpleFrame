{% extends "base.twig" %}

{% import "macroForm\\form.twig" as forms %}

{% block header %}

	<div class="container">
		<div class="row">
			<div class="col-12 text-center">
				<h1>Page de contact</h1>
			</div>
			<div class="">
			{{ flash|default('') }}
			</div>
		</div>
	</div>

{% endblock %}

{% block subtitle %}

	<div class="container">
		<div class="d-flex flex-wrap justify-content-center text-center">
			<form name="{{ current_page }}Formulaire" action="" method="post" class="was-validated">
				<div class="">
				<p>{{ Valid.nom }}</p>
					<p>
						{{ forms.input('nom','votre nom',Valid.nom|html_decode|default(''),'texte') }}
					</p>
					<p>
						{{ Err.nom|default('') }}
					</p>
				</div>
				<div class="">
					<p>
						{{ forms.input('prenom','votre prenom',Valid.prenom|html_decode|default(''),'texte') }}
					</p>
					<p>
						{{ Err.prenom|default('') }}
					</p>
				</div>
				<div class="">
					<p>
						{{ forms.input('mail','votre adresse mail',Valid.mail|html_decode|default(''),'texte') }}
					</p>
					<p>
						{{ Err.mail|default('') }}
					</p>
				</div>
				<div class="">
					<p>
						{{ forms.input('telephone','votre n° de téléphone',Valid.telephone|default(''),'texte') }}
					</p>
					<p>
						{{ Err.telephone|default('') }}
					</p>
				</div>

				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text">Votre message</span>
					</div>
					<textarea class="form-control" placeholder="Nous vous répondrons dans les meilleurs délais" name="message" aria-label="With textarea" rows="4" cols="50" wrap="hard" class="valid-feedback" class="invalid-feedback" required>{{ Valid.message|html_decode|default('') }}</textarea>
				</div>

				<div class="">
					<p>
						{{ captcha }}
					</p>
					<p>
						{{ forms.input('reponse','Reponse au captcha','','texte') }}
					</p>
					<p>
						{{ Err.captcha|default('') }}
					</p>
				</div>

				<div class="">
					<input class="form-check-input" type="checkbox" name="checkbox" value="" id="flexCheckDefault" class="valid-feedback" class="invalid-feedback" required>
					<label class="form-check-label" for="flexCheckDefault">
						<small>En soumettant ce formulaire, j'accepte que les informations saisies soient exploitées dans le cadre strict de ma demande*</small>
					</label>
				</div>

				<div class="">
					<p>
						<label class="fname" for="fname">First name:</label>
						<input class="fname" type="text" id="fnamer" name="fname">
					</p>
					<p>
						{{ Err.deuxiemePrenom|default('') }}
					</p>
				</div>


				<div class="">
					<p>
						<button type="submit" class="btn btn-primary">Soumettre</button>
					</p>
					<input type="hidden" name="p" id="page" value="contact">
					<input type="hidden" name="token" id="page" value="{{ token }}">
				</div>
			</form>
		</div>
	</div>

{% endblock %}

